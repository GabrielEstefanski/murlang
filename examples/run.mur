mrgl
    grrr experience = level * 100
    grrrtn experience
grl

grrrblbl calculate_experience(2)
glglrr "Chief XP: " + xp

// ğŸŸ Switch (murrrgh)
grrr murloc_type = "Deep"

murrrgh murloc_type
mrgl
    case "Coastal":
        glglrr "Lives near the shore."
    case "Deep":
        glglrr "Dwells in dark waters."
    case "Warrior":
