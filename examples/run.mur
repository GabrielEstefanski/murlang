// ğŸŸ Array and for-loop
grrip clan ["Mrggl", "Brgl", "Trgl"]

mrrg member mrglin clan
mrgl
    glglrr "Murloc in clan: " + member
grl

// ğŸŸ If/Else condition
grlbrr (age > 30)
mrgl
    glglrr name + " is a wise murloc!"
grl
blrrgl
mrgl
    glglrr name + " is a young murloc!"
grl

// ğŸŸ While loop with break
gglrbl (age > 40)
mrgl
    glglrr "Countdown: " + age
    age = age - 1

    grlbrr age < 40
    mrgl
        blgrrstop
    grl
grl

// ğŸŸ Function call
grrrblbl greeting(name)

// ğŸŸ Struct instance
