// ğŸŸ Function modifying struct
grrrfnrrg heal(murloc)
mrgl
    murloc.health = murloc.health + 50
    grrrtn murloc
grl

grrr healed_chief = grrrblbl heal(chief_murloc)
glglrr "Healed Murloc: " + healed_chief.name + ", HP: " + healed_chief.health

