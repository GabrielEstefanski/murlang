// ğŸŸ Variables
grrr name = "Mrglglgl"
grrr age = 42

// ğŸŸ Function with parameter and return
grrrfnrrg greeting(name)
mrgl
    glglrr "Hello, " + name + "!"
grl

// ğŸŸ Struct definition
rrkgr Murloc
mrgl
    name: blbtxt,
    level: numblrr,
    health: numblrr,
